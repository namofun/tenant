@model SolveRecord
@{
    Layout = "_WindowLayout";
    ViewData["Title"] = "Edit ";
}

<div class="text-danger" asp-validation-summary="All"></div>
<div class="form-group">
    <label asp-for="Id">ID</label>
    <input asp-for="Id" bs-readonly-attr="true" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="NickName">Nick name</label>
    <input asp-for="NickName" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Grade"></label>
    <input asp-for="Grade" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Category"></label>
    <select asp-for="Category" class="form-control">
        <!--<option value="@@((int)RecordType.Hdoj)">HDOJ</option>-->
        <option value="@((int)RecordType.Codeforces)">Codeforces</option>
        <option value="@((int)RecordType.Vjudge)">Vjudge</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="Account">Account</label>
    <input asp-for="Account" class="form-control" />
</div>

@section Footer {
    <button asp-action="Edit" asp-route-id="@Model.Id" asp-route-page="@ViewBag.Page" type="submit" class="btn-primary btn">Save</button>
}