@model CreateTeamModel
@{
    Layout = "_WindowLayout";
    ViewData["Title"] = "Create team";
    var sels = Model.Affiliations.Select(a => new SelectListItem(a.Name, a.Id.ToString()));
}

<div class="form-group">
    <label asp-for="TeamName">Team Name</label>
    <input asp-for="TeamName" class="form-control" required />
</div>
<div class="form-group">
    <label asp-for="AffiliationId">Team Affiliation</label>
    <select asp-for="AffiliationId" class="form-control" asp-items="sels"></select>
</div>

@section Footer {
    <button asp-action="Create" type="submit" class="btn btn-primary">Create</button>
}