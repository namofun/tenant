@model BatchAddModel
@{
    Layout = "_WindowLayout";
    ViewData["Title"] = "Add students";
    ViewData["MaxWidth"] = "800px";
    ViewData["StaticBackdrop"] = true;
    ViewData["FormAjaxUpload"] = Url.Action("Add");
}

<div class="text-danger" asp-validation-summary="All"></div>
<div class="form-group">
    <textarea asp-for="Batch" class="form-control" style="min-height:20em"></textarea>
    <small class="text-muted mt-2">“学号 姓名”，每个一行，中间以'\t'或空格分隔，与已有值重复会更新。</small>
</div>

@section Footer {
    <button type="submit" class="btn-primary btn">Save</button>
}